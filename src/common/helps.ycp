    /**
     * Label.
     * @param type parallel|serial|usb
     * @return help text
     */
    global define string getAskDeviceLabel (string type) ``{
	return lookup ($[
		// Dialog label - parallel
		"parallel" : _("Parallel printer connection"),
		// Dialog label - serial
		"serial" :   _("Serial printer connection"),
		// Dialog label - USB
		"usb" :      _("USB printer connection"),
		// Dialog label - lpd
		"lpd" :      _("Forwarding queue to a remote LPD"),
		// Dialog label - samba
		"samba" :    _("Samba/Windows printer"),
		// Dialog label - novell
		"novell" :    _("Novell printer"),
                // Dialog label - ipp
                "ipp" :    _("IPP printer"),
                // Dialog label - socket
                "socket" :    _("Direct TCP port printer"),
		// Dialog label
		], type, _("Connection"));
    }

    /**
      * Help text
      * @return string help text
      */
    global define string getCupsUsbDeviceTypeHelp () ``{
	// help text 1/4
	return _("<P><B><BIG>CUPS USB Device Name Type</BIG></B>
With CUPS, you can use two kinds of device names for USB printers.</P>
")
	// help text 2/4
+ _("<P>You can use classical device names (e.g., <I>/dev/usb/lp0</I>), which 
are problematic if you use multiple USB printers and the order in which
they are turned on is not fixed.</P>
")
	// help text 3/4
+ _("<P>The other possibility is to use CUPS-like device names, which contain,
instead of the real device name, the vendor, model, and serial number of the
printer.</P>
")
	// help text 4/4
+ _("<P>Note that some USB printers do not report their serial numbers.</P>");
    }


    /**
      * Help text
      * @param cups_adv boolean true if shall contain CUPS-only related helps
      * @return help text
      */
    global define string getAdvancedHelp (boolean cups_adv) ``{
	string help =
	// Help 1/6
	_("<P><B><BIG>Spooler</BIG></B><BR>You can switch between LPRng and CUPS spoolers. Cups spooler can be installed as client for network printing server
or as a stand-alone printing system. 
To use local printers, you cannot use the client-only installation.</P>
")
	+
	// Help 2/6
	_("<P><B><BIG>Save method</BIG></B><BR>Select whether to save changed queues only or all queues.</P>")
	+
	// Help 3/6
	_("<P><B><BIG>Reinstalling printing packages</BIG></B><BR>If you have problems with configuring printing, they can be caused by
old or corrupted packages in your installation. Clicking <B>Reinstall printing packages</B> might fix these problems.</P>
")
	+
	// Help 4/6
	_("<P><B><BIG>Clearing current configuration</BIG></B><BR>To uninstall all currently configured queues,
select <B>Clear current configuration</B>.</P>
");
	if (cups_adv)
	{
	    // Help text 5/6, optional
	    help = help + _("<P><B><BIG>Advanced CUPS Server Settings</BIG></B><BR>To change advanced CUPS server settings, like broadcasting and permissions, select
<B>CUPS Server Settings</B>.</P>
")
	    +
	    // help text 6/6, optional
	    _("<P><B><BIG>CUPS USB devices</BIG></B><BR>To choose the kind of
device names to use for USB printers, click
<B>CUPS USB Device Settings</B></P>");

	}
	return help;
    }
    /**
     * Help text.
     * @return help text
     */
    global define string getCupsServerHelp () ``{
	return
	// Help 1/3
	_("<P><B><BIG>Allow Browsing</BIG></B><BR>
If you allow browsing, other computers in your network will be able to see your queues the same way as their local ones.
<B>Browse Addresses</B> shows IP addresses (e.g., <I>192.168.0.1</I>) of computers to which to send information about your queues. Use <B>Add</B>, <B>Edit</B>,
and <B>Delete</B> to modify the list of addresses. For the entire network, use the broadcast address of your network (e.g., <I>192.168.0.255</I>)</P>
")
	+
	// Help 2/3
	_("<P>After enabling browsing, the permission for / should be set
accordingly so other computers can print.
For example, when <I>192.168.0.255</I> is used as the browse address, the
permission for / must be set to <I>192.168.0.*</I> to allow all 
hosts on your network to print.</P>
")
	+
	// Help 3/3
	_("<P><B><BIG>Access settings</BIG></B><BR>
You can adjust the permissions other computers in your network have to use your CUPS server.
Permissions can be set for the entire server, administration of your server, and, optionally,
to your printers and classes. Select the desired area and press <B>Change permissions</B>
 to view or change the permission settings.</P>
");
    }
    /**
     * Help text.
     * @param ignore_but boolean true if button for ignoring this area permission shown
     * @return help text
     */
    global define string getCupsAclHelp (boolean ignore_but) ``{
	string help =
	// Help text 1/3 or 1/2
	_("<P><B><BIG>Order of application</BIG></B><BR>
Select whether to apply deny rules before allow rules or 
allow before deny.</P>
")
	+
	//  Help text 2/3 or 2/2
	_("<P><B><BIG>Permissions</BIG></B><BR>
You can edit the list of IP addresses and their permissions. Each line
contains one address and informs whether its owner has access allowed 
or denied. Addresses can be normal IP addresses (e.g., <I>192.168.0.1</I>), 
address blocks using * as a wild card (e.g., <I>192.168.0.*</I>), addresses with mask (e.g., <I>192.168.0.0/255.255.255.0</I>
or <I>192.168.0.0/24</I>), full domain names (e.g., <I>print.example.com</I>), partial domain names
(e.g., <I>*.example.com</I> or <I>.example.com</I>), or the special words <I>All</I> and <I>None</I>.</P>
");
	if (ignore_but)
	    help = help +
	// Help text 3/3
	_("<P><B><BIG>Inherited permissions</BIG></B><BR>
To use permission inherited from the root location (/),
select <B>Use inherited permissions</B>.</P>
");
	return help;
    }

