    /**
     * Help text.
     * @param type type of remote printer
     * @param raw is it raw printer?
     * @return help text
     */
    global define string getEditHelp (string type, boolean raw) ``{
	// help text 2/5 or 2/2
	string help_text = _("<P><B><BIG>Name:</BIG></B><BR>
You may change the name under which to access the configuration in the spool system.
 Form feed settings can also be changed here.</P>
");
	if (raw)
	{
	    // help text 1/2
	    return _("<P><B><BIG>Connection:</BIG></B><BR>You can change connection for this printer.</P>") + help_text;
	}
	else if ("lpd" == type || "filtering" == type || "ipp" == type)
	{
	    // help text 1/2
	    return _("<P><B><BIG>Connection:</BIG></B><BR>
Choose the remote host name and queue name for this remote printer.</P>
") + help_text;
	}
	else if ("samba" == type)
	{
	    // help text 1/5
	    help_text = _("<P><B><BIG>Connection:</BIG></B><BR>
You can change host name and queue name for the remote
 printer and the user name and password.</P>
") + help_text;
	}
	else if ("novell" == type)
	{
	    // help text 1/5
	    help_text = _("<P><B><BIG>Connection:</BIG></B><BR>
You can change host name and queue name for the remote
 printer and the user name and password.</P>
") + help_text;
	}
	else if ("prefilter" == type)
	{
	    // help text 1/5
	    help_text = _("<P><B><BIG>Connection:</BIG></B><BR>
Choose forwarding queue that will be used for this printer.</P>") + help_text;
	}
	else
	{
	    // help text 1/5
	    help_text = _("<P><B><BIG>Connection:</BIG></B><BR>You can change connection for this printer.</P>") + help_text;
	}
	// help text 3/5
	help_text = help_text + _("<P><B><BIG>Model:</BIG></B><BR>
To try your printer with another driver, choose it here.</P>
") +
	// help text 4/5
	_("<P><B><BIG>Model dependent settings:</BIG></B><BR>
Edit filter options here. These options differ for various printer models.</P>
") +
	// help text 5/5
	_("<P><B><BIG>Hardware-independent settings:</BIG></B><BR>
Edit the settings for text printing here.</P>
");
	return help_text;
    }
    /**
     * Help text.
     * @param supported is printer found in db and editable?
     * @return help text
     */
    global define string getProbedPrinterHelp (boolean supported) ``{
	string help_text = "";
	if (supported)
	    {
		// Help, part 1 of 4, branch 1
		help_text = _("<P><B><BIG>New printer:</BIG></B><BR>
The printer was found in the printer database.
 You can use <B>quick automatic setup</B>.</P>");
	    }
	else
	    {
		// Help, part 1 of 4, branch 2
		help_text = _("<P><B><BIG>New printer:</BIG></B><BR>
Printer model could not be autodetected in printer database,
 therefore you must use <B>advanced setup</B> to configure it.</P>");
	    }
	// Help, part 2 of 4
	help_text = help_text + _("<P><B><BIG>Quick automatic setup:</BIG></B><BR>
Printing configuration will be set up for this printer using default settings.</P>
");
	// Help, part 3 of 4
	help_text = help_text + _("<P><B><BIG>Normal setup:</BIG></B><BR>
Detected model information will be used. Choose the name and options for the created configuration.</P>
");
	// Help, part 4 of 4
	help_text = help_text + _("<P><B><BIG>Advanced setup:</BIG></B><BR>
Choose another printer model or try a generic driver.</P>
");
	return help_text;
    }
