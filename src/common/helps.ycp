    /**
     * Help text.
     * @param type string type of remote printer
     * @param raw boolean true if is it raw printer?
     * @param ppd boolean true if queue has non-YaST PPD file
     * @return help text
     */
    global define string getEditHelp (string type, boolean raw, boolean ppd) ``{
	// help text 1/4 or 1/7
	string help_text = _("<P><B><BIG>Allowing Editing</BIG></B><BR>
If you do not allow editing of this queue, the queue will
become a 'non-YaST' queue, which means that YaST will never
again change this queue. Therefore, you should make a queue
'non-YaST' if you decide to use another tool to change 
queue settings.</P>
");
	// help text 2/4 or 2/7
	help_text = help_text + _("<P><B><BIG>Name:</BIG></B><BR>
You may change the name under which to access the configuration in the spool system.
 Form feed settings can also be changed here.</P>
");
	if (type != "class")
	{
	    if (! raw)
	    {
		if (ppd)
		    // help text 3/7
		    help_text = help_text + _("<P><B><BIG>PPD File:</BIG></B><BR>
To select another PPD file, select it here.</P>
");
		else
		    // help text 3/7
		    help_text = help_text + _("<P><B><BIG>Model:</BIG></B><BR>
To try your printer with another driver, choose it here.</P>
");
	    }
            if ("lpd" == type || "ipp" == type)
            {
                // help text 4/7
                help_text = help_text + _("<P><B><BIG>Connection:</BIG></B><BR>
Choose the remote host name and queue name for this remote printer.</P>
");
            }
            else if ("samba" == type)
            {
                // help text 4/7
                help_text = help_text + _("<P><B><BIG>Connection:</BIG></B><BR>
You can change host name and queue name for the remote
 printer and the user name and password.</P>
");
            }
            else if ("novell" == type)
            {
                // help text 4/7
                help_text = help_text + _("<P><B><BIG>Connection:</BIG></B><BR>
You can change host name and queue name for the remote
 printer and the user name and password.</P>
");
            }
            else
            {
                // help text 4/7
                help_text = help_text + _("<P><B><BIG>Connection:</BIG></B><BR>You can change the connection for this printer.</P>");
            }
	    if (!raw && !ppd)
		// help text 5/7
		help_text = help_text + _("<P><B><BIG>Printing filter settings:</BIG></B><BR>
Edit filter options here. These options differ for various printer models.</P>
");
            if (Printer::spooler != "cups")
		// help text 6/7 alt. 1
		help_text = help_text + _("<P><B><BIG>ASCII printing settings:</BIG></B><BR>
Edit some settings for printing ASCII texts.</P>
");
	    if (Printer::spooler != "lprng")
	    {
		// help text 6a/7 alt. 2
		help_text = help_text + _("<P><B><BIG>Restrictions settings:</BIG></B><BR>
Adjust users who are allowed to print using this queue.</P>
");
		// help text 6b/7 alt. 2
		help_text = help_text + _("<P><B><BIG>State and banners settings:</BIG></B><BR>
Set state and banners printed before and after each job for this queue.</P>
");
	    }
		// help text 7/7
	    help_text = help_text + _("<P><B><BIG>Printing a Test Page</BIG></B><BR>
Click <B>Test</B> to test this queue</P>
");
	}
	else
	{
	    // help text 3/4
	    help_text = help_text + _("<P><B><BIG>Class members:</BIG></B><BR>
Choose queues that will be members of this class.</P>
");
	    // help text 4/4
	    help_text = help_text + _("<P><B><BIG>Class settings:</BIG></B><BR>You can change some settings for this class.</P>");

