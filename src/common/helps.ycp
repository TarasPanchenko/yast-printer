    global define string getEditHelp (string type, boolean raw, boolean ppd) ``{
	// help text 1/4 or 1/7
	string help_text = _("<P><B><BIG>Allowing to edit</BIG></B><BR> If you disallow to edit this queue, YaST2 will be unable to change it's settings</P>");
	// help text 2/4 or 2/7
