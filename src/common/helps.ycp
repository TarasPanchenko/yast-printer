     * @return help text
     */
    global define string getAskRemoteHelp (string type) ``{
	string help_text = "";
	if ("samba" == type)
	{
	    // help text 0/5 (optional beginning)
	    help_text = help_text + _("<P><B><BIG>Workgroup:</BIG></B><BR>
Enter the name of your work group.</p>");
	}

	// Help yexy 1/5
	help_text = help_text + _("<P><B><BIG>Host name:</BIG></B><BR>
Enter the host name of your print server.</P>
");
	if ("socket" != type)
	{
	    // Help, 2 of 5, sometimes missing
	    help_text = help_text + _("<P><B><BIG>Remote queue:</BIG></B><BR>Enter the name of the remote printer.</P>");
	}

	if ("samba" == type || "novell" == type)
	    {
		// Help, 3 of 5
		help_text = help_text + _("<P><B><BIG>User, password:</BIG></B><BR>
Enter the user name and password to access the print server.</P>
");
	    }
	else
	    {
		// Help, 5 of 5, 4/5 removed
		help_text = help_text + _("<P>To verify the name, use <B>Test</B>.</P>");
	    }
	return help_text;
    }
