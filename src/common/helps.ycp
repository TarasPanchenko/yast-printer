    textdomain "printer";

    /**
     * Label.
     * @param type parallel|serial|usb
     * @return help text
     */
    global define string getAskDeviceLabel (string type) ``{
	return lookup ($[
		// Dialog label - parallel
		"parallel" : _("Parallel printer connection"),
		// Dialog label - serial
		"serial" :   _("Serial printer connection"),
		// Dialog label - USB
		"usb" :      _("USB printer connection"),
		// Dialog label - lpd
		"lpd" :      _("Forwarding queue to a remote LPD"),
		// Dialog label - samba
		"samba" :    _("Samba/Windows printer"),
		// Dialog label - novell
		"novell" :    _("Novell printer"),
                // Dialog label - ipp
                "ipp" :    _("IPP printer"),
                // Dialog label - socket
                "socket" :    _("Direct TCP port printer"),
		], type, _("Connection"));
    }

    /**
      * Get warning message before using PPD file
      * @return string message
      */
    global define string getPpdWarning () ``{
	return _("PPD files are supported by CUPS only.\n Do you wish to continue?");
    }

    /**
     * Help text.
     * @param type parallel|usb|serial
     * @return help text
     */
    global define string getAskDeviceHelp (string type) ``{
	string help_text = "";
	if (type == "parallel")
	    {
		// Help, parallel printer part
		help_text = _("<P><B><BIG>Parallel port:</BIG></B><BR>
If you have multiple parallel ports, choose the parallel port to
 which your printer is connected.</P>
");
	    }
	if (type == "usb")
	    {
		// Help, USB printer part
		help_text = _("<P><B><BIG>USB port:</BIG></B><BR>Select the device for your USB printer.</P>");
	    }
	if (type == "serial")
	    {
		// Help, serial printer part
		help_text = _("<P><B><BIG>Serial port:</BIG></B><BR>
Select the device for your serial printer.
 You can also set the baud rate.</P>");
	    }
	// Help, common part 1/2
	help_text = help_text + _("<P><B><BIG>Other:</BIG></B><BR>
To enter another device, press <b>Other</b>.</P>");

	// Help, common part 2/2
	help_text = help_text + _("<P><B><BIG>Testing connection:</BIG></B><BR>
To be sure the printer is properly connected,
use the <B>Test</B> button.</P>
");

	// help last part only for parallel printers
	if (type == "parallel")
	    {
		// Help, parallel printer part
		help_text = help_text + _("<P><B><BIG>Parallel port details:</BIG></B><BR>If your
 parallel port does not work, set its IO ports here.</P>
") +
		    _("<p>Be careful when selecting a custom device or changing
 IO port settings. Improper values may damage your system.</p>
");
	    }
	if (type == "serial")
            {
                // Help, parallel printer part
                help_text = help_text + _("<P><B><BIG>Serial port details:</BIG></B><BR>You
can set advanced settings of serial port here.</P>
") +
                    _("<p>Be careful when selecting a custom device or changing
serial port settings. Improper values may damage your system.</p>
");
            }

	return help_text;
    }

    /**
     * Help text.
     * @return help text
     */
    global define string getManufModelHelp () ``{
	return
	// Help, 1/5
	_("<P><B><BIG>Manufacturer:</BIG></B><BR>Select manufacturer of your printer.</P>")
	+
	// Help, 2/5
	_("<P><B><BIG>Model:</BIG></B><BR>
After a manufacturer is selected,
 the list of models is updated with printers made
 by the selected manufacturer. Choose one.</P>
")
	+
	// Help, 3/5
	_("<P>If you cannot find your printer,
try the Generic printers or Ghostscript devices.
If you do not know which protocol your printer uses,
consult the printer's manual or contact the manufacturer.</P>
")
	+
	//Help 4/5
	_("<P><B><BIG>Changing database:</BIG></B><BR>
If you have another printer drivers database, you can use driver from it.
Push <B>Change database</B> to select other database.</p>")
	+
	// Help 5/5
	_("<P><B><BIG>non-YaST PPD files:</BIG></B><BR>
If your printer manufacturer  provides PPD files, then you can use PPD
file from your printer manufacturer. PPD files can be used only with 
CUPS spooler.</P>");
