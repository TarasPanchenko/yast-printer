    /**
     * Help text.
     * @param order symbol `cups, `lprng, `all
     * @param queue boolean true if shall display
     *   a "queue for configured printer" entry
     * @return help text
     */
    global define string getAdvancedConnectionHelp (symbol order, boolean queue) ``{
	string new_queue = _("<P><B><BIG>New Queue to Configured Printer
</BIG></B><BR>
You can configure a new queue of an already configured printer without
respecifying the printer location, manufacturer, and model name.</P>
");
	// Help text 1/10
	string forw = _("<P><B><BIG>Forwarding queue to remote LPD:</BIG></B><BR>
Files to print are sent directly to the remote printer.</P>");
	// Help text 3/10 (2/10 was removed)
	string filtfor = _("<P><B><BIG>Filtering and forwarding queue</BIG></B><BR>
Files are prepared on the local computer. Raw data is sent to the remote host with the printer.</P>");
	// Help text 4/10
	string ipp = _("<P><B><BIG>IPP filtering and forwarding queue queue</BIG></B><BR>
Files are prepared on the local computer. Raw data is sent to the remote host with the printer using the IPP protocol.</P>
");
	// Help text 5/10
	string smb = _("<P><B><BIG>Samba/Windows Printer:</BIG></B><BR>
Remote printer connected to Samba server or Windows.</P>");
	// Help text 6/10
	string ipx = _("<P><B><BIG>Novell Printer:</BIG></B><BR>
Remote printer connected to Novell Netware print server.</P>");
	// Help text 7/10
        string tcp = _("<P><B><BIG>Direct TCP Port Printing</BIG></B><BR>
Files are prepared on the local computer. Then they are sent directly to the TCP socket on the remote host. Use for network printers.</P>
");
	// Help text 8/10
	string oth = _("<P><B><BIG>Other printer:</BIG></B><BR>
You can set URI of the printer.</P>");
	// Help text 9/10
	string pipe = _("<P><B><BIG>Pipe printing:</BIG></B><BR>
You can print to another program using pipe.</P>");
	// Help text 10/10
	string class = _("<P><B><BIG>CUPS class:</BIG></B><BR>
You can set some printers into one class then print to the class. CUPS will divide print jobs between members of the class.</P>
");

	string ret = "";

	if (order == `cups)
	    ret = filtfor + ipp + smb + ipx + tcp + pipe + oth + class + forw;
	else if (order == `lprng)
	    ret = forw + filtfor + smb + ipx + tcp + pipe + ipp + oth + class;
	else
	    ret = forw + filtfor + ipp + smb + ipx + tcp + oth + pipe + class;
	if (queue)
	    ret = new_queue + ret;
	return ret;
    }
