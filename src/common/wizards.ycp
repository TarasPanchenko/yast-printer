	    "ws_start"   : "edit",
	    "edit" : $[
		`con_samba : "samba",
		`con_novell : "novell",
		`con_lpd: "lpd",
		`con_pipe: "pipe",
		`con_ipp : "ipp",
		`con_socket: "socket",
		`con_local : "connection_local",
		`con_uri : "other",
		`name : "name",
		`model : "model",
		`ppd : "ppdselect",
		`settings : "filter",
		`state : "state",
		`perm : "users",
		`class_members : "members",
		`add : "add_printer_sub_wz",
		`next : "storeprinter",
		`abort : `abort,
		],
	    "state" : $[ `next : "edit", `abort : `abort, ],
	    "users" : $[ `next : "edit", `abort : `abort, ],
	    "add_printer_sub_wz" : $[
