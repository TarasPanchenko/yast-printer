		`abort : `abort,
		`next : "edit",
		`specifyppd : "useppd",
		`downloadppd : "downloadppd",
		`select_ppd : "ppdselect_all",
	    ],
	    "ppdselect_all" : $[
		`abort : `abort,
		`next : "edit",
		`select_model : "model",
	    ],
	    "ppdselect" : $[
		`abort : `abort,
		`advanced : "filter",
		`next: "edit",
	    ],
	    "name" : $[
		`abort : `abort,
		`next : "edit",
		`raw : "edit",
		`class : "edit"
	    ],
	    "filter" : $[
		`abort : `abort,
		`next : "edit",
	    ],
	    "useppd" : $[
		`abort : `abort,
		`next : "model",
	    ],
	    "downloadppd" : $[ `abort : `abort, `next : "model"],
	    "members" : $[ `abort : `abort, `next : "edit", ],
	    "storeprinter" : $[`next : `next, ],
