		`serial : "serial",
		`usb : "usb",
		`irda : "irda",
		`bluetooth : "bluetooth",
		`abort : `abort,
	    ],
	    "parallel" : $[
		`abort : `abort,
		`next : "edit",
		`ppdetails : "ppdetails",
	    ],
	    "ppdetails" : $[ `abort : `abort, `next : "parallel", ],
	    "serial" : $[
