                                  queue,
                                  user,
                                  password,
                                  timeout
                                );
          if( ! Printerlib::ExecuteBashCommand( test_command) )
          { Popup::ErrorDetails( sformat( // Message of a Popup::ErrorDetails
                                          // where %1 will be replaced by the SMB share name
                                          // and %2 will be replaced by the host name:
