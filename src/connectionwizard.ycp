          else
          { y2error( "Couldn't validate %1", selected );
            ret=nil;
          }
          break;
    case(`scan_all):
          scanForServers( selected, true );
          break;
    case(`scan):
          scanForServers( selected, false );
          break;
    case(`test):
          if( validateSettingsDialog( selected ) )
          { testQueue( selected );
          }
          break;
    y2internal( "ret %1", ret );
  }
}
  return ret;
