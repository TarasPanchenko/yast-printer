  string host = "";
  string port = "";
  string queue = "";
  string workgroup = "";
  string user = "";
  string password = "";
  switch(selected)
  { case(`tcp):
          host = (string)UI::QueryWidget( `hostname, `Value );
          port = (string)UI::QueryWidget( `port_or_queue, `Value );
