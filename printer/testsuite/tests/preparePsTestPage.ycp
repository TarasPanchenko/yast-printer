	],
    ];
    map I_WRITE = $[];
    map I_EXEC = $[
        "target" : $[
            "bash_output" : $[],
        ],
    ];
    TESTSUITE_INIT ([I_READ, I_WRITE, I_EXEC], 0);
    import "PrinterTest";

    map READ = $[ "target" : $[ "tmpdir" : "/tmp/dir",
                                "stat" : $[] ] ];

    TEST (``(PrinterTest::preparePsTestPage ("lp", "/tmp/file", false)), [READ, $[], $[]], 0);
    TEST (``(PrinterTest::preparePsTestPage ("xxx", "/tmp/file", true)), [READ, $[], $[]], 0);
}
